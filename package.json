{
  "name": "diet-goat",
  "version": "3.0.0-alpha.0",
  "description": "A lightweight replacement for GoatCounter's counter",
  "author": "Nikita Karamov <me@kytta.dev>",
  "license": "ISC",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write .",
    "test": "tsc --noEmit --emitDeclarationOnly false && size-limit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "tsc"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^10.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "size-limit": "^10.0.2",
    "typescript": "^5.2.2"
  },
  "size-limit": [
    {
      "path": "index.js",
      "import": "{ count }",
      "limit": "666 B",
      "brotli": true
    }
  ]
}
