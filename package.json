{
  "name": "diet-goat",
  "version": "3.0.0-alpha.1",
  "description": "A lightweight replacement for GoatCounter's counter",
  "homepage": "https://github.com/kytta/diet-goat#readme",
  "bugs": "https://github.com/kytta/diet-goat/issues",
  "license": "ISC",
  "author": "Nikita Karamov <me@kytta.dev>",
  "funding": [
    "https://github.com/sponsors/kytta",
    "https://liberapay.com/kytta",
    "http://paypal.me/NickKaramoff"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map"
  ],
  "type": "module",
  "exports": "./index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kytta/diet-goat.git"
  },
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write .",
    "test": "tsc --noEmit --emitDeclarationOnly false && size-limit",
    "prepare": "husky install",
    "publish": "clean-publish"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^10.0.2",
    "clean-publish": "^4.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "size-limit": "^10.0.2",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "tsc"
  },
  "size-limit": [
    {
      "path": "index.js",
      "import": "{ count }",
      "limit": "666 B",
      "brotli": true
    }
  ]
}
