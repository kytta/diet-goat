{
  "name": "diet-goat",
  "version": "3.0.0-alpha.5",
  "description": "A lightweight replacement for GoatCounter's counter",
  "homepage": "https://github.com/kytta/diet-goat#readme",
  "bugs": "https://github.com/kytta/diet-goat/issues",
  "license": "ISC",
  "author": "Nikita Karamov <me@kytta.dev>",
  "funding": [
    "https://github.com/sponsors/kytta",
    "https://liberapay.com/kytta",
    "http://paypal.me/NickKaramoff"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map"
  ],
  "type": "module",
  "exports": "./index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kytta/diet-goat.git"
  },
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write .",
    "lint": "prettier --check . && eslint index.js",
    "test": "tsc --noEmit --emitDeclarationOnly false && size-limit",
    "prepare": "husky install",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "postpublish": "rm -rf ./package"
  },
  "devDependencies": {
    "@eslint/js": "^8.53.0",
    "@size-limit/preset-small-lib": "^10.0.2",
    "@types/eslint": "^8.44.7",
    "clean-publish": "^4.2.0",
    "eslint": "^8.53.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-unicorn": "^49.0.0",
    "globals": "^13.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "size-limit": "^10.0.2",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "directory": "package"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "tsc",
    "index.js": "eslint --fix"
  },
  "size-limit": [
    {
      "path": "index.js",
      "import": "{ count }",
      "limit": "650 B",
      "brotli": true
    }
  ]
}
